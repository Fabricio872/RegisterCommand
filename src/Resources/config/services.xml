<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Explicitly configure the service -->

        <service id="fabricio872.register_command.command.user_add_command"
                 class="Fabricio872\RegisterCommand\Command\UserAddCommand"
                 public="true" autowire="true">
                <argument type="service" id="fabricio872.register_command.engine" key="$engine"/>
            <tag name="console.command" command="user:add"/>
        </service>

        <service id="Fabricio872\RegisterCommand\Command\UserAddCommand"
                 alias="fabricio872.register_command.command.user_add_command"
                 public="false"/>

        <service id="fabricio872.register_command.engine" class="Fabricio872\RegisterCommand\Services\engine\SymfonyStyleEngine" autowire="true"/>

    </services>
</container>